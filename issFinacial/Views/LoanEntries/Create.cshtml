                                    </div>
                                </div>
                              </div>
                            </div>
                        </div>
                    </div>
                    <br />

                    <div class="subtitle"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.totalGrams, new { htmlAttributes = new { @class = "form-control", @placeholder = "Total Grams" } })
                                    @Html.ValidationMessageFor(model => model.totalGrams, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.value, new { htmlAttributes = new { @class = "form-control", @placeholder = "Value" } })
                                    @Html.ValidationMessageFor(model => model.value, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.principle, new { htmlAttributes = new { @class = "form-control", @placeholder = "principle" } })
                                    @Html.ValidationMessageFor(model => model.principle, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.intrest, new { htmlAttributes = new { @class = "form-control", @placeholder = "Intrest" } })
                                    @Html.ValidationMessageFor(model => model.intrest, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.intrestAmount, new { htmlAttributes = new { @class = "form-control", @placeholder = "Intrest Amount" } })
                                    @Html.ValidationMessageFor(model => model.intrestAmount, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group col-md-4">
                                    @Html.EditorFor(model => model.deducation, new { htmlAttributes = new { @class = "form-control", @placeholder = "Deducation" } })
                                    @Html.ValidationMessageFor(model => model.deducation, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="text-right">
                        <button type="submit" value="Create" class="btn btn-success">Submit</button>
                        @Html.ActionLink("Cancel", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>

        }

    </div>
</div>
<script language="JavaScript">
    $(function () {
        Webcam.set({
            width: 320,
            height: 240,
            image_format: 'jpeg',
            jpeg_quality: 90
        });
        Webcam.attach('#my_camera');
        Webcam.attach('#camera');
    });
    function take_snapshot() {
        Webcam.snap(function (data_uri) {
            $('#user_img').attr("src", data_uri);
        });
    }
    function Item_snapshot() {
        Webcam.snap(function (data_uri) {
            $('#itemImage').attr("src", data_uri);
        });
    }
</script>