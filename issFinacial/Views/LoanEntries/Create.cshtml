                                        @Html.EditorFor(model => model.queality, new { htmlAttributes = new { @class = "form-control", @placeholder = "Quality" } })
                                        @Html.ValidationMessageFor(model => model.queality, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="form-group col-md-4">
                                        @Html.EditorFor(model => model.grossWeight, new { htmlAttributes = new { @class = "form-control", @placeholder = "Gross Weight" } })
                                        @Html.ValidationMessageFor(model => model.grossWeight, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="form-group col-md-4">
                                        @Html.EditorFor(model => model.netWeight, new { htmlAttributes = new { @class = "form-control", @placeholder = "Net Weight" } })
