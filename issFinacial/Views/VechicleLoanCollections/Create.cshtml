<script>
    var loanInstallements = [];
    $(document).ready(function ()
    {
       $("#vehicleLoanId").change(function ()
       {
            var name = $(this).find('option:selected').val();
           Name(name);
       })
        $("#SelectDueNumberId").change(function () {
            debugger
               var due = $(this).find('option:selected').val();
               // Due(due);
            var selectedDue = loanInstallements.find(x => x.SelectDueNumberId == due);
            $("#DueDate").val(selectedDue.DueDate.split(' ')[0]);
            $("#PrincipleAmount").val(selectedDue.PrincipleAmount)
            $("#IntrestAmount").val(selectedDue.IntrestAmount)
            let amount = (selectedDue.DueAmount);
            $("#TotaldueAmount").val(amount);
            let amounts = parseInt(selectedDue.DueAmount) - parseInt(selectedDue.IntrestAmount);
            $("#MonthLoan").val(amounts);
            //let daysamount = 50;
            //$("#LateDaysAmount").val(daysamount);            
           var CollectionDate = $('#CollectionDate').val();
            var DueDate = $('#DueDate').val();
            var days = daysdifference(CollectionDate, DueDate)
            function daysdifference(CollectionDate, DueDate) {
                var startDay = new Date(CollectionDate);
                var endDay = new Date(DueDate);
                var millisBetween = startDay.getTime() - endDay.getTime();
                var daya = millisBetween / (1000 * 3600 * 24);
                $("#LateDays").val(Math.round(daya));       

                            
                
            }
           
        })
        $("#NetAmount").click(function () {
            debugger
            let day = $('#LateDays').val();
            let amount = $('#TotaldueAmount').val();
            let daysamount = $('#LateDaysAmount').val();
            let bus = parseInt(amount) + (parseInt(daysamount) * parseInt(day));
            $("#Penalty").val(bus);  
            let bu = $('#Penalty').val();
                let Discount = $('#Discount').val();
                let car = parseInt(bu) - parseInt(Discount);
            $("#NetAmount").val(car);
               

            

        })

    });
    function Name(name) {
              $.ajax({
            type: 'POST',
            url: '@Url.Content("~/VechicleLoanCollections/Name")',
            dataType: 'json',
            data: { NAME: name },
                  success: function (result) {
                      console.log(result)
                var data = result;
                      $("#DueDate").empty();
                      $("#Name").empty();
                      $("#SelectDueNumberId").empty();

                      if (data.length > 0) {
                          loanInstallements = data;
                          for (var i = 0; i < data.length; i++) {
                              var tempData = {};
                              if (data[i].DueDate != null) { tempData.DueDate = data[i].DueDate; } else tempData.DueDate = "";

                              $("#Name").val(data[i].Name)
                              $("#Address").val(data[i].Address)
                              $("#PhoneNo").val(data[i].PhoneNo)
                              $("#VechicleNumber").val(data[i].VechicleNumber)
                              $("#NumberOfInstallmentsId").val(data[i].NumberOfInstallments)
                              $("#SelectDueNumberId").append("<option value='" + data[i].SelectDueNumberId + "'>" + data[i].selectDueNumber + "</option >");
                                                      

                          }
                      }
            },
            error: function (err) {
                console.log(err);
            }
        });
    };
       
  

</script>        